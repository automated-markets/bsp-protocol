{% extends "govuk/template.njk" %}

{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block head %}
    <link href="/assets/css/govuk-frontend-3.11.0.min.css" rel="stylesheet">
    <style>
      .grey {
        background-color: #f3f2f1;
      }
      .padding30 {
        padding: 30px 0px 10px;
      }
      .padding100 {
        padding: 100px 0px 10px;
      }
    </style>
{% endblock %}

{% block pageTitle %}GOV.UK - Building Passport Service{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "#",
    serviceName: "Building Passport Service",
    serviceUrl: "#"
  }) }}
{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: "experimental"
    },
    html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row padding30">
    <div class="govuk-grid-column-two-thirds">
      <form class="form" action="/ui/building" method="post">
        {{ govukInput({
          label: {
            text: "Find a building by its UPRN",
            classes: "govuk-label--xl",
            isPageHeading: true
          },
          id: "uprn",
          name: "uprn"
        }) }}

        {{ govukButton({
          text: "Search",
          preventDoubleClick: true
        }) }}
      </form>
    </div>
  </div>

  <div class="govuk-grid-row padding30">
    <div class="govuk-grid-column-one-third">
    </div>
  </div>

  <div class="govuk-grid-row grey padding30">
    <div class="govuk-grid-column-one-third">
      <h2 class="govuk-heading-m" id="subsection-title">
        Passport validation
      </h2>
      <p class="govuk-body-m">Quickly check the current status of a Building Passport using a QR code.</p>
      {{ govukButton({
        text: "Validate QR code",
        preventDoubleClick: true
      }) }}
    </div>

    <div class="govuk-grid-column-one-third">
      <h2 class="govuk-heading-m" id="subsection-title">
        Golden thread
      </h2>
      <p class="govuk-body-m">Explore surveys, documents and records registered against individual buildings.</p>
      {{ govukButton({
        text: "Search building data",
        preventDoubleClick: true
      }) }}
    </div>

    <div class="govuk-grid-column-one-third">
      <h2 class="govuk-heading-m" id="subsection-title">
        Organisations
      </h2>
      <p class="govuk-body-m">Find organisations that interact with the Building Passport Service and explore their activity.</p>
      {{ govukButton({
        text: "Explore organisation activity",
        preventDoubleClick: true
      }) }}
    </div>

  </div>


  <div class="govuk-grid-row padding30">
    <div class="govuk-grid-column-one-third">
      <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
      <h2 class="govuk-heading-m" id="subsection-title">
        About us
      </h2>
      <p class="govuk-body-m">The Building Passport Service is an initiative set up by Southwark Council to bring building safety into the Digtal Age. <a href="#" class="govuk-link">Find out more</a> about the different ways we support building safety.</p>
    </div>
  </div>


{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script src="/assets/js/govuk-frontend-3.11.0.min.js"></script>
  <script>window.GOVUKFrontend.initAll()</script>
{% endblock %}