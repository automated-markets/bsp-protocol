{% extends "govuk/template.njk" %}

{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/accordion/macro.njk" import govukAccordion %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/file-upload/macro.njk" import govukFileUpload %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

{% block head %}
    <link href="/assets/css/govuk-frontend-3.11.0.min.css" rel="stylesheet">
    <style>
      .red {
        color: red;
      }

      .green {
        color: green;
      }

      .centre {
        display: block;
        width: 75%;
        margin-left: auto;
        margin-right: auto;
      }

      .grey {
        background-color: #f3f2f1;
      }

      .padding30 {
        padding: 30px 0px 10px;
      }
    </style>
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "#",
    serviceName: "Building Passport Service",
    serviceUrl: "#"
  }) }}
{% endblock %}

{% block pageTitle %}GOV.UK - Building Passport Service{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: "experimental"
    },
    html: 'This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.'
  }) }}
  {% set url = '/ui/building/' + uprn %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "/ui/search"
      },
      {
        text: "Buildings",
        href: "/ui/search"
      },
      {
        text: uprn,
        href: url
      },
      {
        text: "Register survey",
        href: "#"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  <form class="form" action="/ui/notarise" method="post" enctype="multipart/form-data">
    <input type="hidden" id="uprn" name="uprn" value="{{ uprn }}">
    <input type="hidden" id="originatorAddress" name="originatorAddress" value="0x55a401d54532c7a56cd0c1497a190e767a756a18">    

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Register survey</h1>
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        <h2 class="govuk-heading-m">UPRN</h2>
      </div>
      <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body-m">{{ uprn }}</p>
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        <h2 class="govuk-heading-m">Survey type</h2>
      </div>
      <div class="govuk-grid-column-two-thirds">
        {{ govukSelect({
          id: "surveyType",
          name: "surveyType",
          items: [
            {
              value: "EWS",
              text: "EWS",
              selected: true
            },
            {
              value: "EWS1",
              text: "EWS1"
            },
            {
              value: "HHSRS",
              text: "HHSRS"
            },
            {
              value: "S106",
              text: "S106"
            }
          ]
        }) }}
      </div>  
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        <h2 class="govuk-heading-m">File</h2>
      </div>
      <div class="govuk-grid-column-two-thirds">
        {{ govukFileUpload({
          id: "file",
          name: "file"
        }) }}
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        {{ govukButton({
        text: "Register",
        preventDoubleClick: true
        }) }}
      </div>
      <div class="govuk-grid-column-two-thirds">
      </div>
    </div>
  </form>
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script src="/assets/js/govuk-frontend-3.11.0.min.js"></script>
  <script>window.GOVUKFrontend.initAll()</script>
{% endblock %}
