{
  "name": "bsp-protocol",
  "version": "1.0.0",
  "description": "Blockchain protocol for capturing, storing and tracking building safety records.",
  "main": "index.js",
  "scripts": {
    "compile": "npx truffle compile",
    "migrate": "npx truffle migrate --network development",
    "migrate:kaleido": "npx truffle migrate --network kaleido",
    "start:blockchain": "npx ganache-cli --deterministic",
    "start:app": "nest start",
    "start:app:prod": "node dist/main",
    "exec:list_accounts": "npx truffle exec --network development ./scripts/list_accounts.js",
    "exec:add_ews": "npx truffle exec --network development ./scripts/add_ews_survey.js",
    "exec:verify_ews": "npx truffle exec --network development ./scripts/verify_ews_survey.js",
    "test:blockchain": "npx truffle test ./test/BuildingDataFactory.test.js",
    "test:app": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test": "npm run test:blockchain && npm run test:app && npm run test:e2e",
    "test:kaleido": "npx truffle test --network kaleido",
    "ganache": "node_modules/ganache-cli/cli.js -s 0 --port 8545 -i 1234 -e 100000000000 -l 4700038"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/automated-markets/bsp-protocol.git"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "built_asset_tracking"
  ],
  "author": "Sam Gamble, Automated Markets",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/automated-markets/bsp-protocol/issues"
  },
  "homepage": "https://github.com/automated-markets/bsp-protocol#readme",
  "devDependencies": {
    "@openzeppelin/contracts": "^3.4.1",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.10",
    "chai": "^4.3.4",
    "ganache-cli": "^6.12.2",
    "truffle": "^5.2.4",
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "dotenv": "^8.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "truffle-contract": "^4.0.31"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
